extends ../layout/layout.pug

block title
    title Contact

block main
    main.contact.container.container--large.mb-5.pb-5
        .contact__form.d-flex.p-5
            .info.text-center
                h2.title.mb-4 CONTACT US
                .info__details
                    p.mb-4 5141 Broadway, New York, NY 10034, USA
                    p.mb-4 tangvinhduong99@gmail.com
                    p.mb-0 (212) 932-4000
            form.form
                .form--row
                    +formInput("Name", "text")
                    +formInput("Email", "email")
                .form--row
                    +formInput("Phone", "phone")
                    +formInput("Address", "address")
                +formInput("Subject", "text")
                +formTextArea("Type your message here...", 6)
                button.btn.btn-dark Submit
        .contact__address
            iframe(
                src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d7447.764728385152!2d105.7784953!3d21.0373924!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1611765430644!5m2!1svi!2s" 
                width="100%" 
                height="480" 
                frameborder="0" 
                style="border:0;" 
                allowfullscreen="" 
                aria-hidden="false" 
                tabindex="0"
                )
        